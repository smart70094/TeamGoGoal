<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MessageLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@color/bg_alert"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".09"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/taskName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center"
                    android:text="目標名稱"
                    android:textColor="@color/basicColor"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/targetNameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:background="@color/item_bg_color"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:fontFamily="微軟正黑體"
                    android:gravity="center"
                    android:text="目標內容"
                    android:textColor="@color/basicColor"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/targetContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:background="@color/item_bg_color"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:padding="5dp"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center"
                    android:text="起始日期"
                    android:textColor="@color/basicColor"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/startTimeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".09"
                        android:background="@color/item_bg_color"
                        android:ems="8"
                        android:inputType="textPersonName|date"
                        android:padding="5dp"
                        android:textSize="24sp" />

                    <ImageButton
                        android:id="@+id/selectStartTimeBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".91"
                        android:background="@color/item_bg_color"
                        android:onClick="onClick"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/item_calendar" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center"
                    android:text="結束日期"
                    android:textColor="@color/basicColor"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/EndTimeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".09"
                        android:background="@color/item_bg_color"
                        android:ems="8"
                        android:inputType="textPersonName|date"
                        android:padding="5dp"
                        android:textSize="24sp" />

                    <ImageButton
                        android:id="@+id/selectEndTimeBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".91"
                        android:background="@color/item_bg_color"
                        android:onClick="onClick"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/item_calendar" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center"
                    android:text="藍       圖"
                    android:textColor="@color/basicColor"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/dreamET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:background="@color/item_bg_color"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:text="Name"
                    android:textSize="24sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:gravity="center"
                android:text="成員"
                android:textColor="@color/basicColor"
                android:textSize="24sp" />

            <MultiAutoCompleteTextView
                android:id="@+id/multiAutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:background="@color/item_bg_color"
                android:padding="5dp"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".91"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submitTargetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="新增目標" />

            <Button
                android:id="@+id/clearMessageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="重新填寫" />

            <Button
                android:id="@+id/cannelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="取消" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
