<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff00ff</item>
        <item name="colorPrimaryDark">#00ff00</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/basicColor2</item>
        <item name="colorPrimaryDark">@color/basicColor</item>
        <item name="colorAccent">#000000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/empty</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
